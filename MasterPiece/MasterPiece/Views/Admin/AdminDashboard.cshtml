                                <div>
                                    <strong>Dr. Hanna Geidt</strong><br>
                                    <small>Surgeon</small>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Upcoming Appointments -->
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-header">Upcoming Appointments</div>
                    <div class="card-body upcoming-appointments">
                        <ul class="list-unstyled" id="upcoming-appointments">
                            <!-- Upcoming appointments will be populated here -->
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- JavaScript for dynamic tables and Chart.js -->
    <script>
        // Data for Payments History
        const payments = [
            { doctor: 'Dr. John Doe', description: 'Kidney function test', amount: '$25.15' },
            { doctor: 'Dr. Michael Doe', description: 'Emergency appointment', amount: '$99.15' },
            { doctor: 'Dr. Bertie Maxwell', description: 'Complementation test', amount: '$40.45' }
        ];

        // Data for Upcoming Appointments
        const appointments = [
            { patient: 'Shawn Hampton', description: 'Emergency appointment', time: '10:00' },
            { patient: 'Polly Paul', description: 'USG + Consultation', time: '10:30' },
            { patient: 'John Doe', description: 'Laboratory screening', time: '11:00' },
            { patient: 'Harmani Doe', description: 'Keeping pregnant', time: '11:30' }
        ];

        // Function to render payments history dynamically
        function renderPayments() {
            const paymentsContainer = document.getElementById('payments-history');
            payments.forEach(payment => {
                const paymentItem = `
                        <li class="d-flex justify-content-between mb-2">
                            <span><strong>${payment.doctor}</strong><br>${payment.description}</span>
                            <span>${payment.amount}</span>
                        </li>
                    `;
                paymentsContainer.innerHTML += paymentItem;
            });
        }

        // Function to render upcoming appointments dynamically
        function renderAppointments() {
            const appointmentsContainer = document.getElementById('upcoming-appointments');
            appointments.forEach(appointment => {
                const appointmentItem = `
                        <li class="d-flex justify-content-between mb-2">
                            <span><strong>${appointment.patient}</strong></span>
                            <span>${appointment.description} - ${appointment.time}</span>
                        </li>
                    `;
                appointmentsContainer.innerHTML += appointmentItem;
            });
        }

        // Chart.js for Daily Revenue Report
        const ctx = document.getElementById('revenueChart').getContext('2d');
        const revenueChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['May 11', 'May 12', 'May 13', 'May 14', 'May 15', 'May 16'],
                datasets: [{
                    label: 'Income',
                    data: [80, 90, 75, 60, 85, 95],
                    backgroundColor: '#4caf50',
                    borderColor: '#4caf50',
                    borderWidth: 1
                },
                {
                    label: 'Expense',
                    data: [40, 50, 30, 20, 45, 55],
                    backgroundColor: '#f44336',
                    borderColor: '#f44336',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        // Call the functions to populate the tables
        document.addEventListener('DOMContentLoaded', function () {
            renderPayments();
            renderAppointments();
        });
    </script>
