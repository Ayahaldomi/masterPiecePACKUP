
@{
    ViewBag.Title = "DoctorReportAdd";
    Layout = "~/Views/Shared/_LayoutDoctor.cshtml";
}



<style>
    .card {
        padding: 15px;
    }

    .container {
        margin-top: 50px;
    }

    .form-container, .table-container {
        margin-top: 20px;
    }


    .card {
        padding: 1em;
    }

    button.btn.btn-success {
        margin: 0.5em;
    }

    body {
        background-color: #69acc759;
    }

    .container-fluid {
        padding-top: 120px !important;
    }

    .card.p-4.shadow-md {
        background-color: #00000012;
    }
</style>

<div class="card">
    <div class="container">
        <h1 class="text-center">Add Test Result</h1>
        <div class="form-group row">
            <div class="container mt-4">
                <div class="card p-4 shadow-md">
                    <div class="row mt-4">
                        <div class="col-md-6 d-flex justify-content-flex-start">
                            <label for="patientId" class="fw-bolder">Patient ID:</label>
                            <p class="ms-2">8855</p>
                        </div>
                        <div class="col-md-6 d-flex justify-content-flex-start">
                            <label for="fullName" class="fw-bolder">Full Name:</label>
                            <p class="ms-2">Ayah Hasan</p>
                        </div>
                        <div class="col-md-6 d-flex justify-content-flex-start">
                            <label for="age" class="fw-bolder">Age:</label>
                            <p class="ms-2">28</p>
                        </div>
                        <div class="col-md-6 d-flex justify-content-flex-start">
                            <label for="gender" class="fw-bolder">Gender:</label>
                            <p class="ms-2">Female</p>
                        </div>
                        <div class="col-md-6 d-flex justify-content-flex-start">
                            <label for="testOrder" class="fw-bolder">Test Order:</label>
                            <p class="ms-2">5518</p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="table-container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Test Name</th>
                            <th scope="col">Result</th>
                            <th scope="col">Normal Range</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Ferritin</td>
                            <td>74</td>
                            <td><pre>Male: 30 to 400 nanograms per milliliter (ng/mL)
Female: 13 to 150 ng/mL.</pre></td>
                        </tr>
                        <tr>
                            <td>TSH</td>
                            <td>2.6</td>
                            <td><pre>0.4-4.0 mU/L</pre></td>
                        </tr>
                        <!-- More rows as needed -->
                    </tbody>
                </table>
            </div>
            <form method="post" action="/YourController/SaveParagraph" class="container mt-4">
                <div class="form-group">
                    <label for="paragraphText" class="form-label">Enter Your Paragraph</label>
                    <textarea id="paragraphText" name="ParagraphText" rows="10" class="form-control" placeholder="Type your paragraph here..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>



        </div>


    </div>
</div>

<script>
    document.getElementById('save-button').addEventListener('click', function() {
      // Add save functionality here
      document.getElementById('print-button').disabled = false;
    });
</script>

