
@{
    ViewBag.Title = "InventoryManagement";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .container {
        width: 80%;
        margin: 0 auto;
        padding: 20px;
    }

    #searchBar {
        margin-bottom: 20px;
    }

    .card {
        padding: 1em;
    }

    button.btn.btn-success {
        margin: 0.5em;
    }

    body {
        background-color: #69acc759;
    }

    .container-fluid {
        padding-top: 120px !important;
    }

</style>

<div class="card">
    <div class="container mt-5">
        <h1 class="text-center mb-4">Inventory Management</h1>
        <div class="mb-3">
            <input type="text" id="searchBar" class="form-control" onkeyup="searchMaterials()" placeholder="Search for materials by name or ID...">
        </div>
        <table class="table table-striped table-bordered" id="inventoryTable">
            <thead class="table-light">
                <tr>
                    <th>Material ID</th>
                    <th>Material Name</th>
                    <th>Purchase Date</th>
                    <th>Expiration Date</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                <!-- Sample data, replace with dynamic content as needed -->
                <tr>
                    <td>001</td>
                    <td>Material A</td>
                    <td>2024-01-01</td>
                    <td>2025-01-01</td>
                    <td>100</td>
                </tr>
                <tr>
                    <td>002</td>
                    <td>Material B</td>
                    <td>2024-02-01</td>
                    <td>2025-02-01</td>
                    <td>50</td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>
