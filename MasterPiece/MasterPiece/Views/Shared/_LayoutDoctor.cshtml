    <script>
        document.querySelector('.notification-dropdown').addEventListener('mouseenter', function () {
            // Fetch notifications when hovering over the bell icon
            fetch('/Notifications/GetLatest')
                .then(response => response.json())
                .then(data => {
                    const notificationList = document.getElementById('notificationList');
                    notificationList.innerHTML = ''; // Clear current notifications

                    if (data.length > 0) {
                        data.forEach(notification => {
                            const item = document.createElement('li');
                            item.classList.add('notification-item');

                            // Build the URL dynamically in JavaScript
                            const url = `/Admin/DoctorReportAdd?orderID=${notification.Order_ID}`;

                            // Try parsing the date to handle "Invalid Date"
                            const notificationDate = new Date(notification.Notification_Date);
                            const formattedDate = isNaN(notificationDate.getTime())
                                ? 'Unknown Date' // Fallback if the date is invalid
                                : notificationDate.toLocaleString(); // Use toLocaleString for a better format

                            // Construct the list item with the link
                            item.innerHTML = `
                        <a href="${url}">
                            <p>Order #${notification.Order_ID} requires your attention</p>
                            <small>${formattedDate}</small>
                        </a>`;

                            notificationList.appendChild(item);
                        });
                    } else {
                        const noNotifications = document.createElement('li');
                        noNotifications.classList.add('notification-item');
                        noNotifications.innerHTML = 'No new notifications';
                        notificationList.appendChild(noNotifications);
                    }
                })
                .catch(error => console.error('Error fetching notifications:', error));
        });

    </script>

