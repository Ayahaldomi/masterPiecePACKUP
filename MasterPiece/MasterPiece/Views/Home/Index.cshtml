<!-- Service Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center mx-auto wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="d-inline-block border rounded-pill py-1 px-4">Services</p>
            <h1 class="display-5 mb-5">Wellness Packages That We Offer For You</h1>
        </div>
        <div class="row g-4">
            @foreach (var service in Model.Package.Select((value, index) => new { value, index }))
            {
                var delay = 0.1 + (service.index % 3) * 0.2;<!-- Adjust the delay dynamically -->
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="@delay.ToString("0.0")s">
                    <div class="service-item rounded d-flex h-100">
                        <div class="service-img rounded">
                            <img class="img-fluid" src="~/Uploads/Packages/@service.value.Picture" alt="@service.value.Picture">
                        </div>
                        <div class="service-text rounded p-5">
                            <div class="btn-square rounded-circle mx-auto mb-3">
                                <i class="fa fa-vials text-primary fs-4"></i>
                            </div>
                            <h4 class="mb-3">@service.value.Package_Name</h4>
                            <p class="mb-4">@service.value.Description</p>
                            <a class="btn btn-sm" href="@Url.Action("ServiceDetails", "Home", new {id = service.value.Package_ID})">
                                <i class="fa fa-plus text-primary me-2"></i>Read More
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
