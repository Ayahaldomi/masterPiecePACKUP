@model IEnumerable<MasterPiece.Models.Test_Order>

@{
    var user = Session["userSession"] as MasterPiece.Models.Patient;
}


<style>
    html,
    body,
    .intro {
        height: 100%;
    }

    table td,
    table th {
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
    }

    .mask-custom {
        background: rgba(24, 24, 16, .2);
        border-radius: 2em;
        backdrop-filter: blur(25px);
        border: 2px solid rgba(255, 255, 255, 0.05);
        background-clip: padding-box;
        box-shadow: 10px 10px 10px rgba(46, 54, 68, 0.03);
    }

    .card.mb-4 {
        height: 100%;
    }
    button.btn.btn-outline-primary {
        width: 250px;
    }
    .table-fixed th,
    .table-fixed td {
        width: 25%; /* Adjust this percentage or set a specific pixel value */
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
        max-width: 0;
    }

    .table-responsive th:nth-child(1), .table-responsive td:nth-child(1) {
        width: 10%; /* Column 1 (Test ID) */
    }

    .table-responsive th:nth-child(2), .table-responsive td:nth-child(2) {
        width: 40%; /* Column 2 (Tests) */
    }

    .table-responsive th:nth-child(3), .table-responsive td:nth-child(3) {
        width: 20%; /* Column 3 (Test Date) */
    }

    .table-responsive th:nth-child(4), .table-responsive td:nth-child(4) {
        width: 30%; /* Column 4 (View Details) */
    }
</style>



<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb" class="bg-body-tertiary rounded-3 p-3 mb-4">
                    <ol class="breadcrumb mb-0">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item"><a href="#">User</a></li>
                        <li class="breadcrumb-item active" aria-current="page">User Profile</li>
                    </ol>
                </nav>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="~/myContent/img/blank-profile-picture-973460_960_720.jpg" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@user.Full_Name</h5>
                        <p class="text-muted mb-4">@user.Gender</p>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="@Url.Action("ProfileEdit", "User", new {id = user.Patient_ID})"> <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary">View Profile</button> </a>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="@Url.Action("AppointmentUser", "User", new {id = user.Patient_ID})"> <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary">Book Appointment</button> </a>
                        </div>
                        <div class="d-flex justify-content-center mb-2">
                            @using (Html.BeginForm("CreateChatRoom", "Chat", FormMethod.Post, new { @class = "d-inline" }))
                            {
                                @Html.Hidden("labTechId", 1)
                                @Html.Hidden("patientId", user.Patient_ID)
                                <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary">Chat With A Doctor</button>
                            }
                        </div>
                        <p class="text-center">
                            <button type="button" class="btn btn-outline-primary mb-3" data-bs-toggle="modal" data-bs-target="#createFeedbackModal">
                                Give Us Your Feedback
                            </button>
                        </p>
                        <div class="d-flex justify-content-center mb-2">
                            <a href="@Url.Action("LogOut", "User")"> <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-primary">Logout</button> </a>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <h3 class="text-center mt-4">Your Test Result</h3>
                    <div class="table-responsive">
                        <table class="table table-borderless table-fixed  mb-0 text-center">
                            <thead>
                                <tr>
                                    <th scope="col">Test ID</th>
                                    <th scope="col">Tests</th>
                                    <th scope="col">Test Date</th>
                                    <th scope="col">View Details</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in Model)
                                {
                                    if (s.Status == "Completed")
                                    {
                                        <tr>
                                            <th scope="row">@s.Order_ID</th>
                                            <td>
                                                @foreach (var n in s.Test_Order_Tests)
                                                {
                                                    if (n.Order_ID == s.Order_ID)
                                                    {
                                                        <span>@n.Test.Test_Name</span>
                                                    }
                                                }
                                            </td>
                                            <td>
                                                @(s.Date.HasValue ? s.Date.Value.ToString("yyyy-MM-dd") : "N/A")
                                            </td>
                                            <td><a href="@Url.Action("DownloadPdf", "Patients", new {OrderID = s.Order_ID})" target="_blank"><button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-secondary">Download Results As PDF</button></a></td>
                                        </tr>

                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Create Feedback Modal -->
<div class="modal fade" id="createFeedbackModal" tabindex="-1" aria-labelledby="createFeedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<h5 class="modal-title" id="createFeedbackModalLabel">Create New Feedback</h5>*@
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Create Feedback Form -->
                @using (Html.BeginForm("CreateFeedback", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label for="Message" class="form-label">Please Tell Us Your Feedback!</label>
                        <textarea class="form-control" id="Message" name="Message" required></textarea>
                    </div>

                        <input type="hidden" class="form-control" id="Patient_ID" name="Patient_ID" required value="@user.Patient_ID" />
                    
                    <button type="submit" class="btn btn-primary">Save</button>
                }
            </div>
        </div>
    </div>
</div>